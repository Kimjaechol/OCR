# ============================================
# Legal Document OCR - Environment Configuration
# Copy this file to .env and fill in your values
# ============================================

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Gemini API (for LLM-based correction)
GEMINI_API_KEY=your_gemini_api_key_here

# Model Paths
GOT_MODEL_PATH=./weights/GOT-OCR2_0
YOLO_MODEL_PATH=./weights/yolo_table_best.pt/yolov8n.pt

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Processing Configuration
MAX_PAGES_PER_BATCH=50
MAX_FILE_SIZE_MB=500
CONCURRENT_WORKERS=1
GPU_MEMORY_FRACTION=0.8

# OCR Configuration
OCR_DPI=300
OCR_CONFIDENCE_THRESHOLD=0.4
ENABLE_GEMINI_CORRECTION=true

# Storage Configuration
UPLOAD_DIR=./temp_uploads
OUTPUT_DIR=./outputs
LOG_DIR=./logs

# Security
API_KEY=your_api_key_for_production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Pricing (KRW per page)
PRICE_PER_PAGE=50
